<div class="chat-container">
	<h1>Coder Chat</h1>
	<div class="chat-box">
		<div id="chatList" class="chat-list"></div>
		<div class="chat-input-container">

			<input
				type="text"
				id="chat"
				name="chat"
				placeholder="Ingresar mensaje"
				class="chat-input"
			/>
			<button
				class="btn btn-success send-btn"
				onclick="sendMessage()"
			>Enviar</button>
		</div>
	</div>
</div>

